<!DOCTYPE html>
<html lang="en">

<head>
    <title>Adoptar</title>
    <meta charset="utf-8">
    <link rel="icon" href="/images/favicon.ico">
    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/css/form.css">


    <style>
        .pt1 {
            background-image: url("images/fondoregis.jpg");
            background-size: cover;
            background-color: rgb(234, 233, 245);
            width: 100%;
            height: 100%;
        }
    </style>
    <script src="js/jquery.js"></script>
    <!--script src="js/forms.js"></!--script-->
    <script src="js/jquery-migrate-1.1.1.js"></script>
    <script src="js/superfish.js"></script>
    <script src="js/jquery.equalheights.js"></script>
    <script src="js/jquery.easing.1.3.js"></script>
    <script src="js/jquery.ui.totop.js"></script>

    <script>

        jQuery(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>
</head>

<body>
    {{> header}}
    <div class="content pt1">
        <div class="ic">

        </div>
        <div class="container_12">
            <div class="grid_5 prefix_1">
                <form id="form" action="/saveAdoptForm" method="post">
                    {{#if mensajeUsuario}}
                    <label for="mensajeUsuario"><b>{{mensajeUsuario}}</b></label><br><br>
                    {{/if}}
                    <label for="nombrePerro"><b>Nombre Perro: {{nombrePerro}}</b></label>
                    <fieldset class="form-register">
                        <h4 class="ic1">Formulario de Adopcion:</h4>
                        <div class="mpd">
                            <label class="mov_adop">
                                <input class="controls" type="text" name="mov_adop" placeholder="Motivo Adopcion">
                                <br class="clear">
                            </label>
                            <label class="ani_cas">
                                <input class="controls" type="text" name="ani_cas" placeholder="Animales en casa:">
                                <br class="clear">
                            </label>
                        </div>
                        <div class="mpd">
                            <label class="ani_ant">
                                <input class="controls" type="text" name="ani_ant" placeholder=" Animales anteriores:">
                                <br class="clear">
                            </label>
                            <label class="hijos">
                                <input class="controls" type="text" name="hijos" placeholder=" Numeros de hijos:">
                                <br class="clear">
                            </label>
                        </div>
                        <div class="mpd">
                            <label class="habit_cas">
                                <input class="controls" type="text" name="habit_cas"
                                    placeholder="Habitantes en la casa:">
                                <br class="clear">
                            </label>
                            <label class="salario">
                                <input class="controls" type="text" name="salario" placeholder="Salario:">
                                <br class="clear">

                            </label>
                        </div>
                        <div class="mpd">
                            <label class="est_civ">
                                <input class="controls" type="text" name="est_civ" placeholder="Estado civil:">
                                <br class="clear">
                            </label>
                            <label class="ale_fam">
                                <input class="controls" type="text" name="ale_fam" placeholder="Alergias familia:">
                                <br class="clear">
                            </label>
                        </div>
                        <label class="ref">
                            <input class="controls" type="text" name="ref" placeholder="Referencias:">
                            <br class="clear">
                        </label><br>
                        <div class="clear"></div>
                        <div class="mpd">
                            <button class="btn" type="submit">Solicitar Adopcion</button>
                            <button class="btn" type="reset" value="Reset">Limpiar</button>
                        </div>
                        <input type="text" name="idPerro" value="{{idPerro}}" style="display:none">
                    </fieldset>
                </form>
            </div>


        </div>
    </div>
    <!--=======content================================-->



    <!--==============================footer=================================-->

    {{> footer}}
</body>

</html>